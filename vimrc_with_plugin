" ---------------------------------------------
" Dachee Suen's persanl configuration
let mapleader=" "
syntax on
filetype on
filetype indent on
set number
set norelativenumber
set cursorline
set wrap
set showcmd
set wildmenu
set hlsearch
exec "nohlsearch"
set incsearch
set ignorecase
set smartcase
set backspace=2
set smartindent
set encoding=utf-8
set cindent
set tabstop=4
set shiftwidth=4
set autoindent
set showmatch
set matchtime=1
set bufhidden=hide

noremap J 5j
" noremap K 5k
noremap <LEADER><CR> :nohlsearch<CR>

map S :w<CR>
map Q :q<CR>
map R :source $MYVIMRC<CR>

call plug#begin('~/.vim/plugged')

Plug 'vim-airline/vim-airline'
Plug 'connorholyday/vim-snazzy'
Plug 'plasticboy/vim-markdown'

call plug#end()


color snazzy
